@{
    Layout = "_LayoutAdmin";
}

@model UtenteRuoloView

<div class="backgroundOpacoDritto text-center p-4">
<form asp-controller="Identity" asp-action="GestisciUtente" method="post">

    <input type="hidden" asp-for="Utente.Id" />

    <input asp-for="Utente.UserName" />

    <select class="my-2" asp-for="RuoloUtente.Id">
        <option value=""></option>
        @foreach(var Ruolo in Model.Ruoli)
        {
            <option class="my-2" value="@Ruolo.Id">@Ruolo.Name</option>
        }
    </select><br />

    <button type="submit" class="btn btn-success">Invia Modifiche</button>
</form>

<a href="@Url.Action("Elimina","Identity",new{username = Model.Utente.UserName})" class="btn btn-danger my-4">Elimina Utente</a>
</div>