@model List<Videogioco>

@if (Model.Count == 0)
{
    <h3>Non sono presenti Videogiochi nel Database</h3>
    <a class="btn btn-primary" href="@Url.Action("Crea","Admin")">Aggiungi Videogioco</a>
}
else
{
    <main class="container">
        <a class="btn btn-primary" href="@Url.Action("Crea","Admin")">Aggiungi Videogioco</a>
        <h1>Lista Videogiochi</h1>
        <table class="table table-hover my-5">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col"></th>
                    <th scope="col">Tipologia</th>
                    <th scope="col">Prezzo</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Videogioco videogioco in Model)
                {
                    <tr>
                        <td><a href="@Url.Action("Dettagli","Admin",new{id=videogioco.Id})">@videogioco.Nome</a></td>
                        <td><img src="@videogioco.Foto" class="img-fluid" alt="@videogioco.Nome" style="max-width:100px"></td>
                        <td>@videogioco.Tipologia.TipologiaNome</td>
                        <td>@videogioco.Prezzo €</td>
                        <td><a class="btn btn-primary" href="@Url.Action("Modifica","Admin", new{id=videogioco.Id})">Modifica Videogioco</a></td>
                        <form>
                        <td><button class="submit btn btn-danger" href="@Url.Action("Elimina","Admin", new{id=videogioco.Id})">Elimina Videogioco</button></td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>       
    </main>
}